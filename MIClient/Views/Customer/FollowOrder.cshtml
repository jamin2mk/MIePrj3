@model IEnumerable<MIData.Models.FollowedOrder>

@{
    ViewBag.Title = "FollowOrder";
}



<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>  My Orders</h1>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Index", "Index", "Customer")</li> &nbsp;&nbsp;&nbsp; >
            <li class="active">My Orders</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a href="" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Your Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
                        Change Password
                    </a>
                </div>
            </div>

            <!-- My Follow Order -->
            <div class="col-md-10">
                <!-- Order -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">My Orders</h3>
                    </div>
                    <div class="panel-body">
                        <!-- <div class="row">
          <div class="col-md-12">
              @using (Html.BeginForm("SearchByName", "Admin"))
              {
                  <input type="text" class="form-control" placeholder="Filter customers by name..."> <input type="submit" value="Search" />
              }

          </div>
      </div>
        -->
                        <br>
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipOrder)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Payment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipOrder)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Payment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

