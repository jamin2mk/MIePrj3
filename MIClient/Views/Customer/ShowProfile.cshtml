@model MIData.Models.Customer

@{
    ViewBag.Title = "ShowProfile";
}



<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span>  My Profile</h1>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Index", "Index", "Customer")</li> &nbsp;&nbsp;&nbsp; >
            <li class="active">My Profile</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a href="" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Your Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit Profile
                    </a>
                    <a href="" class="list-group-item">
                        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
                        Change Password
                    </a>
                </div>
            </div>

            <!-- My Follow Order -->
            <div class="col-md-10">
                <!-- Order -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">My Profile</h3>
                    </div>
                    <div class="panel-body">

                        <br>

                        <div>

                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_fname)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_fname)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_lname)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_lname)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_gender)
                                </dt>

                                <dd>
                                    @{ var gen = Model.cus_gender; }
                                    @if (gen == true)
                                    {
                                        <p>Male</p>
                                    }
                                    else
                                    {
                                        <p>Female</p>
                                    }
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_dob)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_dob)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_phone)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_phone)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_add)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_add)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.cus_email)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.cus_email)
                                </dd>



                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit Profile", "EditProfile", new { id = Model.cus_id }) |
                            @Html.ActionLink("Back to Index", "Index")
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

