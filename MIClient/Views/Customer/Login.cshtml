@model MIClient.Models.Customer
@{
    ViewBag.Title = "Login";
}
@if (Session["Login"] == null)
{
    <link href = "~/Content/bootstrap.min.css" rel = "stylesheet" />
<link href="~/css/style2.css" rel="stylesheet" type="text/css" />
<section id="main">
    <div class="container">
        <h2 style="text-align: center;">Login</h2>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm("Login", "Customer", new { @class = "well", @id = "login" }))
                {
                    <div class="form-group">
                        <label>E-mail</label>
                        @Html.EditorFor(m => m.cus_email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.cus_email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.EditorFor(m => m.cus_pass, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.cus_pass, "", new { @class = "text-danger" })
                    </div>
                    @Html.ActionLink("Register account", "Register", "Customer")
                    <button type="submit" class="btn btn-main-color">Login</button>
                    @*<p class="text-danger">@ViewBag.LoginFailed</p>*@
                    <p class="text-danger">@Html.ValidationSummary(true)</p>
                }
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

