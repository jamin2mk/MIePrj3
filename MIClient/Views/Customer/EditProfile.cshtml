
@{
    Layout = null;
}
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Edit Profile</title>
        <!-- Bootstrap core CSS -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
    </head>

    <body>
        @if (Session["Login"] != null)
        {
            @model MIClient.ServiceReferenceMI.tb_customer
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                                aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">MyImage</a>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Order", "Order", "Customer")</li>
                            <li class="active">@Html.ActionLink("Profile", "YourProfile", "Customer")</li>
                            <li>@Html.ActionLink("Follow Order", "FollowOrder", "Customer")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Welcome, " + Html.DisplayFor(x => x.cus_fname), "YourProfile", "Customer")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Customer")</li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </nav>
            <br />
            <section id="breadcrumb">
                <div class="container">
                    <ol class="breadcrumb">
                        <li><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Profile</li> &nbsp;&nbsp;&nbsp; >
                        <li class="active"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Profile</li>
                    </ol>
                </div>
            </section>
            <section id="main">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="list-group">
                                @Html.ActionLink("Profile", "YourProfile", "Customer", new { @class = "list-group-item active main-color-bg" })
                                @Html.ActionLink("Your Profile", "YourProfile", "Customer", new { @class = "list-group-item active" })
                                @Html.ActionLink("Edit Profile", "EditProfile", "Customer", new { @class = "list-group-item" })
                                @Html.ActionLink("Change Password", "ChangePassword", "Customer", new { @class = "list-group-item" })
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="panel panel-default">
                                <div class="panel-heading main-color-bg">
                                    <h3 class="panel-title"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Profile</h3>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditProfile", "Customer", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group col-xs-6 row">
                                            <b>First Name</b>
                                            @Html.EditorFor(x => x.cus_fname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(x => x.cus_fname, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-xs-6">
                                            <b>Last Name</b>
                                            @Html.EditorFor(x => x.cus_lname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(x => x.cus_lname, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label>Gender </label>
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(x => x.cus_gender, true) Male
                                            </label>

                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(x => x.cus_gender, false) Female
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <b>Date of Birth</b>
                                            @Html.EditorFor(x => x.cus_dob, new { htmlAttributes = new { @class = "form-control" } } )

                                            @Html.ValidationMessageFor(x => x.cus_dob, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <b>Phone Number</b>
                                            @Html.EditorFor(x => x.cus_phone, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(x => x.cus_phone, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <b>Email</b>
                                            @Html.EditorFor(x => x.cus_email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(x => x.cus_email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <b>Address</b>
                                            @Html.EditorFor(x => x.cus_add, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(x => x.cus_add, "", new { @class = "text-danger" })
                                        </div>
                                        <button type="submit" class="btn btn-main-color">Save Change</button>
                                        <button type="reset" class="btn btn-danger">Reset</button>
                                        <p class="text-danger">@ViewBag.EditFailed</p>
                                    }
                                </div> <!--Ket thuc panel body -->
                            </div>

                        </div> <!-- customer list -->
                    </div>
                </div>
            </section>

            <!-- Modals -->

            

            <footer id="footer">
                <p>Copyright MyImage, &copy; 2018</p>
            </footer>

        }
        else
        {
            Response.Redirect(Url.Action("Login","Customer"));
        }
    </body>

</html>

