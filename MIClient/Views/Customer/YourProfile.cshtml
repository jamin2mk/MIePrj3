@{
    Layout = null;
}
    <!DOCTYPE html>

    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Your Profile</title>
        <!-- Bootstrap core CSS -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
    </head>

    <body>
        @if (Session["Login"] != null)
        {
            @model MIClient.ServiceReferenceMI.tb_customer
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                                aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("MyImage", "Home", "Customer", new { @class = "navbar-brand" })
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Order", "Order", "Customer")</li>
                            <li class="active">@Html.ActionLink("Profile", "YourProfile", "Customer")</li>
                            <li>@Html.ActionLink("Follow Order", "FollowOrder", "Customer")</li>

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Welcome, " + Html.DisplayFor(x => x.cus_fname), "YourProfile", "Customer")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Customer")</li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </nav>

            <br />

            <section id="breadcrumb">
                <div class="container">
                    <ol class="breadcrumb">
                        <li><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Profile</li> &nbsp;&nbsp;&nbsp; >
                        <li class="active"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Your Profile</li>
                    </ol>
                </div>
            </section>

            <section id="main">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="list-group">
                                @Html.ActionLink("Profile", "YourProfile", "Customer", new { @class = "list-group-item active main-color-bg" })
                                @Html.ActionLink("Your Profile", "YourProfile", "Customer", new { @class = "list-group-item active" })
                                @Html.ActionLink("Edit Profile", "EditProfile", "Customer", new { @class = "list-group-item" })
                                @Html.ActionLink("Change Password", "ChangePassword", "Customer", new { @class = "list-group-item" })
                            </div>
                        </div>


                        <div class="col-md-10">
                            <!-- Order -->
                            <div class="panel panel-default">
                                <div class="panel-heading main-color-bg">
                                    <h3 class="panel-title"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Your Profile</h3>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("YourProfile", "Customer"))
                                    {
                                        <div class="form-group col-xs-6 row">
                                            <b>First Name</b>
                                            <input readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x.cus_fname)" />

                                        </div>
                                        <div class="form-group col-xs-6">
                                            <b>Last Name</b>
                                            <input readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x.cus_lname)" />
                                        </div>
                                        <div class="form-group">
                                            <b>Gender</b>
                                            @{
                                                string gender;
                                                if (Model.cus_gender == true)
                                                {
                                                    gender = "Male";
                                                }
                                                else
                                                {
                                                    gender = "Female";
                                                }

                                            }
                                            <input readonly="readonly" class="form-control" value="@gender" />
                                        </div>
                                        <div class="form-group">
                                            <b>Date of Birth</b>
                                            <input type="datetime" readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x.cus_dob)" />
                                        </div>
                                        <div class="form-group">
                                            <b>Phone Number</b>
                                            <input readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x. cus_phone)" />
                                        </div>
                                        <div class="form-group">
                                            <b>Email</b>
                                            <input readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x. cus_email)" />
                                        </div>
                                        <div class="form-group">

                                            <b>Address</b>
                                            <input readonly="readonly" class="form-control" value="@Html.DisplayFor(x => x. cus_add)" />

                                        </div>
                                    }


                                </div> <!--Ket thuc panel body -->
                            </div>

                        </div> <!-- customer list -->
                    </div>
                </div>
            </section>
            <footer id="footer">
                <p>Copyright MyImage, &copy; 2018</p>
            </footer>

            <!-- Bootstrap core JavaScript
        ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
        }
        else
        {
            Response.Redirect(Url.Action("Login", "Customer"));
        }
    </body>
    </html>
