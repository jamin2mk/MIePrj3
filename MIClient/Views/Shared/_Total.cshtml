@using MIData.Models;
@model MImages
    @{ 
        Layout = "_Layout.cshtml";
    }



<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> New Upload</h1>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Index", "Index", "Customer")</li> &nbsp;&nbsp;&nbsp; >
            <li class="active">New Upload</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a href="@Url.Action("ShowProfile","Customer")" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Profile
                    </a>
                    <a href="@Url.Action("ShowProfile","Customer")" class="list-group-item">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Your Profile
                    </a>
                    <a href="@Url.Action("EditProfile","Customer")" class="list-group-item">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit Profile
                    </a>
                    <a href="@Url.Action("ChangePassword","Customer")" class="list-group-item">
                        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
                        Change Password
                    </a>
                </div>
            </div>

            <!-- My Follow Order -->
            <div class="col-md-10">
                <!-- Order -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Upload Image</h3>
                    </div>
                    <div class="panel-body">

                        <br>
                        @{
                            List<MImage> data;
                            decimal total = 0;
                            int quantity = 0;
                            if (Model == null)
                            {
                                data = new List<MImage> { new MImage() };
                            }
                            else
                            {
                                data = Model.MImageList;
                            }
                        }

                        @foreach (var item in data)
                        {

                            var amount = item.Price * item.Copies;
                            quantity += item.Copies;
                            <div class="row">
                                <div class="col-md-4">
                                    <span>@item.Size</span>
                                </div>
                                <div class="col-md-3">
                                    <span>@Math.Round(item.Price, 2)</span>
                                </div>
                                <div class="col-md-2">
                                    <span>@item.Copies</span>
                                </div>
                                <div class="col-md-3">
                                    <span>@Math.Round(amount, 2)</span>
                                </div>
                            </div>
                        }

                        <hr />
                        <div class="row">
                            <div class="col-md-7">
                                <span>Total</span>
                            </div>
                            <div class="col-md-2">
                                <span>@quantity</span>
                            </div>
                            <div class="col-md-3">
                                <span>@Math.Round(Model.Total, 2)</span>
                            </div>
                        </div>

                        <div class="row text-center my-30">
                            <span class="btn btn-default w-80">@Html.ActionLink("Next", "ShipInfo")</span>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>


    