
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">

<body>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">MyImage</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Dashboard", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Order List", "Order", "Admin")</li>
                    <li>@Html.ActionLink("Customer List", "Customer", "Admin")</li>
                    <li>@Html.ActionLink("Size Catalogue", "Size", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="dashboard.html">Welcome, @Session["admin"]</a></li>
                    <li>@Html.ActionLink("Logout", "Login", "Admin")</li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</h1>
                </div>
            </div>
        </div>
    </header>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="dashboard.html" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="order.html" class="list-group-item">
                            <span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span>
                            Orders <span class="badge">4</span>
                        </a>
                        <a href="customer.html" class="list-group-item">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            Customers <span class="badge">12</span>
                        </a>
                        <a href="#" class="list-group-item">...</a>
                    </div>
                </div>

                <!-- Overview -->
                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-3 dash-box" title="Orders this month">
                                <div class="well">
                                    <h3><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span> 19</h3>
                                    <h5>In Month</h5>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box" title="Customers this month">
                                <div class="well">
                                    <h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 16</h3>
                                    <h5>In Month</h5>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box" title="Orders this year">
                                <div class="well">
                                    <h3><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span> 100</h3>
                                    <h5>In Year</h5>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box" title="Customers this year">
                                <div class="well">
                                    <h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 80</h3>
                                    <h5>In Year</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Waiting Orders -->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Waiting Orders</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover" id="order-table">
                                <tr>
                                    <th>Customer</th>
                                    <th>Date of Order</th>
                                    <th>
                                        <div class="dropdown modify">
                                            <span class="dropdown-toggle pointer" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
                                                  aria-expanded="true">Date of Shipping<span class="caret"></span></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">January</a></li>
                                                <li><a href="#">February</a></li>
                                                <li><a href="#">March</a></li>
                                                <li><a href="#">April</a></li>
                                                <li><a href="#">May</a></li>
                                                <li><a href="#">June</a></li>
                                                <li><a href="#">July</a></li>
                                                <li><a href="#">August</a></li>
                                                <li><a href="#">September</a></li>
                                                <li><a href="#">October</a></li>
                                                <li><a href="#">November</a></li>
                                                <li><a href="#">December</a></li>
                                            </ul>
                                        </div>
                                    </th>
                                    <th>Payment</th>
                                    <th>Shipping Address</th>
                                    <th>
                                        <div class="dropdown modify">
                                            <span class="dropdown-toggle pointer" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
                                                  aria-expanded="true">Status<span class="caret"></span></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">Waiting</a></li>
                                                <li><a href="#">Finished</a></li>
                                            </ul>
                                        </div>
                                    </th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <td>103</td>
                                    <td>Jan 2, 2019</td>
                                    <td>Jan 9, 2019</td>
                                    <td>Credit Card</td>
                                    <td>830 Nguyen Chi Thanh</td>
                                    <td><span class="glyphicon glyphicon-hourglass" aria-hidden="true" title="waiting"></span></td>
                                    <td>
                                        <div class="dropdown modify">
                                            <span class="glyphicon glyphicon-refresh dropdown-toggle pointer" id="dropdownMenu1"
                                                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">Finished</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>104</td>
                                    <td>Jan 5, 2019</td>
                                    <td>Jan 12, 2019</td>
                                    <td>Credit Card</td>
                                    <td>530 Ly Chinh Thang</td>
                                    <td><span class="glyphicon glyphicon-hourglass" aria-hidden="true" title="waiting"></span></td>
                                    <td>
                                        <div class="dropdown modify">
                                            <span class="glyphicon glyphicon-refresh dropdown-toggle pointer" id="dropdownMenu1"
                                                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">Finished</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>105</td>
                                    <td>Jan 6, 2019</td>
                                    <td>Jan 13, 2019</td>
                                    <td>CardCredit</td>
                                    <td>210 Doc Lap</td>
                                    <td><span class="glyphicon glyphicon-hourglass" aria-hidden="true" title="waiting"></span></td>
                                    <td>
                                        <div class="dropdown modify">
                                            <span class="glyphicon glyphicon-refresh dropdown-toggle pointer" id="dropdownMenu1"
                                                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">Finished</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>106</td>
                                    <td>Jan 6, 2019</td>
                                    <td>Jan 15, 2019</td>
                                    <td>CardCredit</td>
                                    <td>111 Nguyen Binh Khiem</td>
                                    <td><span class="glyphicon glyphicon-hourglass" aria-hidden="true" title="waiting"></span></td>
                                    <td>
                                        <div class="dropdown modify">
                                            <span class="glyphicon glyphicon-refresh dropdown-toggle pointer" id="dropdownMenu1"
                                                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></span>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                <li><a href="#">Finished</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

