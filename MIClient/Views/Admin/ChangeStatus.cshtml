@model MIClient.Models.Status

@{
    ViewBag.Title = "ChangeStatus";
}
@if (Session["admin"] != null)
{
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span> Orders <small>Manage Orders</small></h1>
                </div>
            </div>
        </div>
    </header>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Dashboard", "Index", "Admin")</li> &nbsp;&nbsp;&nbsp;   >
                <li class="active">Orders</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <div class="list-group">
                        <a href="@Url.Action("Index","Admin")" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="@Url.Action("Order","Admin")" class="list-group-item">
                            <span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span>
                            Orders <span class="badge"> @ViewData["AllOrder"]</span>
                        </a>
                        <a href="@Url.Action("Customer","Admin")" class="list-group-item">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            Customers <span class="badge"> @ViewData["AllCustomer"]</span>
                        </a>
                        <a href="@Url.Action("Size","Admin")" class="list-group-item">
                            <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
                            Size <span class="badge"> @ViewData["AllSize"]</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-10">
                    <!-- Order -->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Orders List</h3>
                        </div>
                        <div class="panel-body">

                            <div class="">
                                @using (Html.BeginForm("ChangeStatus", "Admin"))
                                {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">

                                    
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.o_id, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.o_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.o_id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @Html.HiddenFor(model => model.o_recip)
                                    @Html.HiddenFor(model => model.o_pay)
                                    @Html.HiddenFor(model => model.o_cus_id)
                                    @Html.HiddenFor(model => model.o_date)
                                    @Html.HiddenFor(model => model.o_deli_date)
                                    @Html.HiddenFor(model => model.o_dt_id)
                                    @Html.HiddenFor(model => model.o_folder)
                                    @Html.HiddenFor(model => model.o_pr_id)
                                    @Html.HiddenFor(model => model.o_recip_phone)
                                    @Html.HiddenFor(model => model.o_shipadd)
                                    @Html.HiddenFor(model => model.o_s_id)


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.o_status, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.o_status, new SelectList(new[] { "Waiting", "Delivery", "Finished" }), new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.o_status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Update" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                }

                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>


    

}
else
{
    Layout = null;
}


