@model MIClient.Models.Admin

@{
    ViewBag.Title = "Login";}

@{ 
    Layout = null;
}




<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />


<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">

                    @using (Html.BeginForm("Login", "Admin", new { @class = "well" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <label>@Html.LabelFor(m => m.uid)</label>
                            @Html.EditorFor(m => m.uid, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(m => m.pwd)</label>
                            @Html.EditorFor(m => m.pwd, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <button type="submit" class="btn btn-main-color btn-block">Login</button>

                    }

                </div>
            </div>
        </div>
    </div>

</section>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

